  <section id="blog" class="blog-mf sect-pt4 route">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <div class="title-box text-center">
            <h3 class="title-a">
              Blog
            </h3>
            <p class="subtitle-a">
              Lorem ipsum, dolor sit amet consectetur adipisicing elit.
            </p>
            <div class="line-mf"></div>
          </div>
        </div>
      </div>
      <div class="row">
        {{#each posts}}    
            <div class="col-md-4">
            <div class="card card-blog">
                <div class="card-img">
                <a href={{this.route}}><img src="{{this.mdIMG}}" alt="" class="img-fluid"></a>
                </div>
                <div class="card-body">
                <div class="card-category-box">
                    <div class="card-category">
                    <h6 class="category">Travel</h6>
                    </div>
                </div>
                <h3 class="card-title"><a href={{this.route}}>See more ideas about Travel</a></h3>
                <p class="card-description">
                    {{this.description}}
                </p>
                </div>
                <div class="card-footer">
                <div class="post-author">
                    <a href="#">
                    <img src={{this.smIMG}} alt="" class="avatar rounded-circle">
                    <span class="author">{{this.name}}</span>
                    </a>
                </div>
                <div class="post-date">
                    <span class="ion-ios-clock-outline"></span> {{this.read}}
                </div>
                </div>
            </div>
            </div>
        {{/each}}
      </div>
    </div>
  </section>